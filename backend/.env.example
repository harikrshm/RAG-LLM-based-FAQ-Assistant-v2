# Backend Environment Variables

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# LLM Configuration
# Google Gemini API Key
GOOGLE_API_KEY=your_google_api_key_here

# Alternative: Open-source LLM (if using)
# LLM_PROVIDER=gemini  # Options: gemini, openai, ollama
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# Vector Database Configuration (ChromaDB)
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_NAME=mutual_fund_knowledge_base

# RAG Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Knowledge Base Configuration
KNOWLEDGE_BASE_PATH=./data/knowledge_base
SOURCE_URLS_FILE=./data/source_urls.json
GROWW_MAPPING_FILE=./data/groww_page_mapping.json

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring (Optional)
# SENTRY_DSN=your_sentry_dsn_here
# ENABLE_METRICS=true

# Groww Website Configuration
GROWW_BASE_URL=https://groww.in
GROWW_API_BASE_URL=https://api.groww.in

# Data Ingestion
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_TIMEOUT=30
SCRAPER_RETRY_ATTEMPTS=3

# Response Configuration
MAX_RESPONSE_LENGTH=2000
ENABLE_STREAMING=false
